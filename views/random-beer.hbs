<div class="m-0 row justify-content-center">
    {{#each responseFromAPI}}
    <div class="card mb-3 " style="max-width: 740px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src={{image_url}} class="img-fluid rounded-start p-5" alt="...">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text"><small class="text-muted">{{tagline}}</small></p>
                    <p>Food pairing:
                    <ul>
                        {{#each food_pairing}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    </p>
                    <p>Brewers Tips:
                    <ul>
                        <li>{{brewers_tips}}</li>
                    </ul>
                    </p>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>